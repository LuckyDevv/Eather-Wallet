<div class="block-transaction">
    <img src="{path}" class="transaction-image" alt="">
    <div class="transaction">
        <div class="transaction-info">
            <div class="transaction-name">{name}</div>
            <div class="transaction-description">{type}</div>
            <div class="transaction-time">{date}</div>
        </div>
        <div class="transaction-paid {receipt}">{amount}</div>
    </div>
</div>